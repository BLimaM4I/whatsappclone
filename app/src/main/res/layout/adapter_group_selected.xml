<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:orientation="vertical" android:padding="10dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/adapter_group_selected_ivImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/standard_photo_24"/>

        <TextView
                android:id="@+id/adapter_group_selected_ivTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>